<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="20.0" style="-fx-background-color: #2b2b2b;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.test_2.controllers.CreateAccountController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Text fill="WHITE" style="-fx-font-size: 24;" text="Création de compte étudiant"/>
    
    <TextField fx:id="lastNameField" promptText="Nom" style="-fx-background-color: #3c3f41; -fx-text-fill: white;"/>
    
    <TextField fx:id="firstNameField" promptText="Prénom" style="-fx-background-color: #3c3f41; -fx-text-fill: white;"/>
    
    <DatePicker fx:id="birthDatePicker" promptText="Date de naissance" style="-fx-background-color: #3c3f41; -fx-text-fill: white;"/>
    
    <ComboBox fx:id="classComboBox" promptText="Classe" style="-fx-background-color: #3c3f41; -fx-text-fill: white;"/>
    
    <TextField fx:id="passwordField" promptText="Mot de passe" style="-fx-background-color: #3c3f41; -fx-text-fill: white;"/>
    
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="createButton" onAction="#handleCreate" text="Créer le compte" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>
        <Button fx:id="cancelButton" onAction="#handleCancel" text="Annuler" style="-fx-background-color: #f44336; -fx-text-fill: white;"/>
    </HBox>
    
    <Label fx:id="errorLabel" textFill="RED" visible="false"/>
</VBox> 